{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ES2020",
		"lib": ["ES2020"],
		"moduleResolution": "node",
		"types": ["k6"],
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"noImplicitAny": true,
		"allowImportingTsExtensions": true
	},
	"include": ["tests/**/*.ts", "types/**/*.d.ts"],
	"exclude": ["node_modules"]
}
