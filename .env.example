ENVIRONMENT=dev

# Base URL of the app under test (use host.docker.internal when app runs on host)
BASE_URL=http://host.docker.internal:5197
K6_WEB_DASHBOARD=true
K6_WEB_DASHBOARD_OPEN=true
K6_WEB_DASHBOARD_EXPORT=reports/k6-report.html

# Required: Dynatrace environment URL
K6_DYNATRACE_URL=https://<environment>.live.dynatrace.com
# Required: Dynatrace API token with 'metrics.ingest' scope (API v2)
K6_DYNATRACE_APITOKEN=

# Optional: How often metrics are sent to Dynatrace (default: 1s)
# K6_DYNATRACE_FLUSH_PERIOD=1s

# Optional: Skip TLS verification (default: true)
# K6_DYNATRACE_INSECURE_SKIP_TLS_VERIFY=true

# Optional: Additional HTTP headers
K6_DYNATRACE_HEADER_X_Test_Header=Test-Header
